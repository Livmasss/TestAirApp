<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextViewStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="trip_cover_style">
        <item name="cornerSize">
            10%
        </item>
    </style>

    <style name="round_shapeable_style">
        <item name="cornerSize">
            50%
        </item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="DatePickerTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:colorAccent">@color/dark_blue</item>
        <item name="buttonBarButtonStyle">@style/AppTheme.Alert.Button</item>
    </style>
    <style name="AppTheme.Alert.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <style name="CarouselButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/round_shape</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DarkBlueButtonStyle"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/DarkBlueButtonThemeOverlay</item>
    </style>

    <style name="SwitchButtonStyle"
        parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/DarkBlueButtonThemeOverlay</item>
    </style>

    <style name="DarkBlueButtonThemeOverlay">
        <item name="colorPrimary">@color/dark_blue</item>
    </style>
</resources>